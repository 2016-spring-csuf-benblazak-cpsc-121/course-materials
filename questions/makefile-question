PREP := ../../../scripts/prep.py
SECTION := ../../../scripts/section.py

CXX := clang++
CXXFLAGS := -std=c++14

# .............................................................................

OUTPUT := $(wildcard code/*.cpp)
OUTPUT := $(filter-out code/.gen.%,$(OUTPUT))
OUTPUT := $(filter-out code/%.part.cpp,$(OUTPUT))
OUTPUT := $(OUTPUT:code/%.cpp=code/.gen.%.output)

SECTIONED := $(OUTPUT:%.output=%.cpp.section.all) $(OUTPUT:%=%.section.all)

# -----------------------------------------------------------------------------
.PHONY: all clean cleanall

all: $(OUTPUT) $(SECTIONED)
	-for i in code/.*--good; do make "$${i/%--good/--diff}"; done
	for i in code/.*.output code/.*.section.*; do make $${i%.blank}.blank; done

clean:
	-rm -r code/.gen.*

cleanall: clean

# -----------------------------------------------------------------------------

.gen.%: %
	cp '$<' '$@'

.gen.%: .gen.%.cpp
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -o '$@' $^

.gen.%.output: .gen.%
	'./$<' > '$@'

# this generates more than the specified file
.gen.%.section.all: .gen.%
	$(SECTION) '$<'

# .............................................................................

%--diff: %--bad %--good
	diff -u $^ | tail -n +3 > '$@'

%.blank: %
	sed 's/.*/ /' '$<' > '$@'

# -----------------------------------------------------------------------------

.SECONDARY:

%:: makefile

