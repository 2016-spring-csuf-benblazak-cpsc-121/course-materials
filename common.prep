def strip_extension(self, _in, n=1):
    '''Strip `n` filetype extensions from a filename.  If `n` is 0 or larger
    than the number of extensions, strip all extensions.
    '''
    _in = _in.split('.')
    if n <= 0 or n >= len(_in):
        return _in[0]
    return '.'.join(_in[:-n])

type(self).strip_extension = strip_extension

